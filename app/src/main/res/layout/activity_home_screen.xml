<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnPractical_1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@color/colorAccent"
                android:text="Practical 1" />

            <Button
                android:id="@+id/btnPractical_2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@color/colorAccent"
                android:text="Practical 2" />

            <Button
                android:id="@+id/btnPractical_3"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@color/colorAccent"
                android:text="Practical 3" />

            <Button
                android:id="@+id/btnPractical_4"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@color/colorAccent"
                android:text="Practical 4" />

            <Button
                android:id="@+id/btnPractical_5"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@color/colorAccent"
                android:text="Practical 5" />

            <Button
                android:id="@+id/btnPractical_6"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@color/colorAccent"
                android:text="Practical 6" />

            <Button
                android:id="@+id/btnPractical_7"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@color/colorAccent"
                android:text="Practical 7" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>